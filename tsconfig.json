{
	"compilerOptions": {
        "allowUmdGlobalAccess": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
		"strict": true,		
		"noImplicitAny": true,
		"preserveConstEnums":true,
		"sourceMap": true,
		"watch": false,
        "pretty": true,
        "baseUrl": "./src/",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "paths": {
            "three/examples/jsm/libs/dat.gui.module": [
                "./node_modules/@types/dat.gui"
            ]
        }
	},
    "include": ["src/*.ts"]
}
